<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal" android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:background="#eee">

    <ImageView
        android:src="@drawable/gr_photo_18072014_103842pm"
        android:id="@+id/img_single_item"
        android:layout_width="80dp"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:id="@+id/llv1_single_item"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_name"
            android:textColor="#000"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:text="Prof Gaurang Raval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_designation"
            android:textColor="#000"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:text="Associate Professor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/textView_experience"
            android:textColor="#000"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:text="XP: 20 years"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="right|center"
        android:id="@+id/llv2_single_item"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_gravity="right"
            android:id="@+id/textView_last_rated_tv"
            android:hint="09:15 Today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RatingBar
            android:layout_gravity="right"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="1"
            android:rating="1"
            android:stepSize="1" />

    </LinearLayout>

</LinearLayout>