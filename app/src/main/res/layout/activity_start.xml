<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.silentdevelopers.facultyrater.HomeActivity">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:background="#eee"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:src="@drawable/gr_photo_18072014_103842pm"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="center"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="left"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:text="Name: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000" />

                <TextView
                    android:gravity="left"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:text="Prof Gaurang Raval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#9e9e9e" />

            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="left"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:text="Designation: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000" />

                <TextView
                    android:gravity="left"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:text="Associate Professor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="#9e9e9e"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                />

            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="left"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:text="Years of Experience: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000" />

                <TextView
                    android:gravity="left"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:text="20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="#9e9e9e"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                />

            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="left"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:text="Educational Q: "
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000" />

                <TextView
                    android:gravity="left"
                    android:padding="7dp"
                    android:textSize="15sp"
                    android:text="Ph.D. (Computer Science and Engineering)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <View
        android:background="#aaa"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        />

    <!-- for ug subjects  and read more .. -->
    <TextView
        android:layout_marginLeft="5dp"
        android:gravity="left|center"
        android:padding="5dp"
        android:textSize="15sp"
        android:text="MORE INFORMATION"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:gravity="left"
            android:padding="7dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="ABOUT HIM: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:padding="2dp"
            android:gravity="left"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="@string/ug_sub_taught_text"
            />

        <TextView
            android:layout_marginRight="5dp"
            android:padding="2dp"
            android:gravity="right"
            android:textColor="#008"
            android:text="(... Read More ... )"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <View
        android:layout_marginTop="3dp"
        android:background="#aaa"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        />
    <!-- for your ratings and ratings bar.. -->
    <TextView
        android:layout_marginLeft="5dp"
        android:gravity="left|center"
        android:padding="5dp"
        android:textSize="15sp"
        android:text="YOUR RATINGS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="right"
                android:layout_gravity="center"
                android:padding="7dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="TEACHING:"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <RatingBar
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="1"
                android:stepSize="1" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="right"
                android:layout_gravity="center"
                android:padding="7dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="FRIENDLINESS:"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <RatingBar
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="1"
                android:stepSize="1" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="right"
                android:layout_gravity="center"
                android:padding="7dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="GRADING:"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <RatingBar
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="1"
                android:stepSize="1" />

        </LinearLayout>
    </LinearLayout>


    <!-- Submit button-->
        <LinearLayout
            android:background="#fff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT RATING !"
                android:layout_gravity="center" />

        </LinearLayout>

</LinearLayout>

</ScrollView>

</LinearLayout>
